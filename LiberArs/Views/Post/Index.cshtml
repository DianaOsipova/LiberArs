@model IEnumerable<LiberArs.Models.Post>

@{
    ViewData["Title"] = "Index";
}

<h1>Профиль - @ViewBag.Name</h1>

<p>
    <a asp-action="Create">Добавить работу</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Theme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTime)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.User)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Theme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.PostId">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.PostId">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.PostId">Удалить</a>
            </td>   
        </tr>
}
    </tbody>
</table>
